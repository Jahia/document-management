<project xmlns="http://maven.apache.org/POM/4.0.0"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0
                      http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <artifactId>jahia-document-management-root</artifactId>
        <groupId>org.jahia.modules</groupId>
        <version>1.0-SNAPSHOT</version>
    </parent>
    <artifactId>document-thumbnails</artifactId>
    <name>Jahia Document Thumbnails</name>
    <packaging>war</packaging>
    <description>Jahia document thumbnails creation module</description>
    
    <repositories>
        <repository>
            <id>icepdf</id>
            <name>ICEpdf Maven Repository</name>
            <url>http://anonsvn.icefaces.org/repo/maven2/releases</url>
            <releases>
                <enabled>true</enabled>
            </releases>
            <snapshots>
                <enabled>false</enabled>
            </snapshots>
        </repository>
    </repositories>
    
    <dependencies>
        <dependency>
            <groupId>org.jahia.modules</groupId>
            <artifactId>jahia-document-management-api</artifactId>
            <version>1.0-SNAPSHOT</version>
        </dependency>

        <dependency>
            <groupId>org.icepdf</groupId>
            <artifactId>icepdf-core</artifactId>
            <version>4.3.0</version>
        </dependency>
        <dependency>
            <groupId>net.coobird</groupId>
            <artifactId>thumbnailator</artifactId>
            <version>0.3.10</version>
        </dependency>
    </dependencies>
    
    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-war-plugin</artifactId>
                <configuration>
                    <failOnMissingWebXml>false</failOnMissingWebXml>
                    <archive>
                        <manifestEntries>
		                	<Implementation-Title>${project.name}</Implementation-Title>
		                    <Implementation-Version>${project.version}</Implementation-Version>
	                    	<Implementation-Vendor>${jahia.manifest.vendor.name}</Implementation-Vendor>
	                    	<Implementation-Vendor-Id>${jahia.manifest.vendor.id}</Implementation-Vendor-Id>
	                    	<Implementation-URL>${jahia.manifest.vendor.url}</Implementation-URL>
		                    <Specification-Title>${project.name}</Specification-Title>
		                    <Specification-Version>${project.version}</Specification-Version>
	                    	<Specification-Vendor>${jahia.manifest.vendor.name}</Specification-Vendor>
                            <package-name>${project.name}</package-name>
                            <root-folder>${project.artifactId}</root-folder>
                            <module-type>module</module-type>
                        </manifestEntries>
                    </archive>
					<archiveClasses>true</archiveClasses>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>